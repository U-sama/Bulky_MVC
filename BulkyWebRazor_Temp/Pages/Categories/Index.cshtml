@page
@model BulkyWebRazor_Temp.Categories.IndexModel

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-page="/Categories/create">
            <i class="bi bi-plus-circle"></i> CREATE NEW CATEGORY
            </a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Category
            </th>
            <th>
                Display Order
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.CategoriesList.OrderBy(c => c.DisplayOrder))
        {
            <tr>
                <td>
                    @obj.Name
                </td>
                <td>
                    @obj.DisplayOrder
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-page="/Categories/edit" asp-route-Id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-page="/Categories/delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-pencil-square"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
    
</table>